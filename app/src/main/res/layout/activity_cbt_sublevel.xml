<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CBT_Sublevel"
    android:background="@color/light_pink">

    <com.example.rewire.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" >

        <Button
            android:id="@+id/scenario1"
            android:layout_width="320dp"
            android:layout_height="75dp"
            android:layout_marginTop="288dp"
            android:layout_marginEnd="1dp"
            android:fontFamily="@font/montserrat"
            android:text="Scenario 1"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/scenario2"
            android:layout_width="320dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Scenario 2"
            android:textSize="34sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scenario1"
            app:layout_constraintVertical_bias="0.044" />

        <ImageButton
            android:id="@+id/scenario2_lock"
            android:layout_width="325dp"
            android:layout_height="75dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/dark_pink"
            android:src="@drawable/lock_icon"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scenario1" />

        <Button
            android:id="@+id/scenario3"
            android:layout_width="320dp"
            android:layout_height="75dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/montserrat"
            android:text="Scenario 3"
            android:textSize="34sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scenario2"
            app:layout_constraintVertical_bias="0.072" />

        <ImageButton
            android:id="@+id/scenario3_lock"
            android:layout_width="325dp"
            android:layout_height="75dp"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/dark_pink"
            android:src="@drawable/lock_icon"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scenario2" />
    </com.example.rewire.Header>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="LEVEL 1"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

</androidx.constraintlayout.widget.ConstraintLayout>