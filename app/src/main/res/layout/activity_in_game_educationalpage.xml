<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".in_game_educationalpage"
    android:background="@color/light_pink">

    <com.example.rewire.Header
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:background="@drawable/bt_box"
        android:fontFamily="@font/fredoka"
        android:text="Educational Information"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58" />

    <ImageView
        android:id="@+id/edu_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="308dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <ImageView
        android:id="@+id/edu_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="56dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/next_icon" />

    <ImageView
        android:id="@+id/edu_pageA"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="228dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_circle_black_fill" />

    <ImageView
        android:id="@+id/edu_pageB"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_circle_white_fill" />

    <ImageView
        android:id="@+id/edu_pageC"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bt_circle_white_fill" />

</androidx.constraintlayout.widget.ConstraintLayout>