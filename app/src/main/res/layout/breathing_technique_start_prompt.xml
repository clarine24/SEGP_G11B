<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bt_prompt_box"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/bt_box_white_fill"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/bt_input_message"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:text="Please insert the number of rounds"
        android:fontFamily="@font/fredoka"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/okButton"
        android:layout_width="142dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:fontFamily="@font/fredoka"
        android:text="OK"
        android:backgroundTint="@color/dark_pink"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/bt_prompt_box"
        app:layout_constraintEnd_toEndOf="@+id/bt_prompt_box"
        app:layout_constraintStart_toStartOf="@+id/bt_prompt_box" />

    <SeekBar
        android:id="@+id/bt_input_seekBar"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:indeterminate="false"
        android:max="10"
        android:min="1"
        android:progress="5"
        android:scaleX="2"
        android:scaleY="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bt_numberOfRoundsInput"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="5"
        android:fontFamily="@font/fredoka"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>