<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentationPopup">

    <TextView
        android:id="@+id/DocumentationPopup"
        android:layout_width="375dp"
        android:layout_height="655dp"
        android:background="@drawable/bt_box_white_fill"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444"
        tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:id="@+id/exitbuttondoc"
        android:layout_width="25dp"
        android:layout_height="41dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="auto"
        android:src="@drawable/close_icon"
        app:layout_constraintBottom_toBottomOf="@id/DocumentationPopup"
        app:layout_constraintEnd_toEndOf="@id/DocumentationPopup"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@id/DocumentationPopup"
        app:layout_constraintTop_toTopOf="@id/DocumentationPopup"
        app:layout_constraintVertical_bias="0.029"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Documentation"
        android:layout_width="290dp"
        android:layout_height="93dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="142dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="518dp"
        android:fontFamily="@font/fredoka"
        android:text="Documentation"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@id/DocumentationPopup"
        app:layout_constraintEnd_toEndOf="@id/DocumentationPopup"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="@id/DocumentationPopup"
        app:layout_constraintTop_toTopOf="@id/DocumentationPopup"
        app:layout_constraintVertical_bias="0.959" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="287dp"
        android:layout_height="475dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="162dp" />

</androidx.constraintlayout.widget.ConstraintLayout>