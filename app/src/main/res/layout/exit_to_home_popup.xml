<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tohomeexit"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/bt_box_white_fill"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/areyousure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Are you sure?"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tohomeexit"
        app:layout_constraintStart_toStartOf="@+id/tohomeexit"
        app:layout_constraintTop_toTopOf="@+id/tohomeexit" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="142dp"
        android:layout_height="78dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="45dp"
        android:clickable="true"
        android:fontFamily="@font/fredoka"
        android:text="Exit"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tohomeexit"
        app:layout_constraintStart_toStartOf="@+id/tohomeexit" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="142dp"
        android:layout_height="78dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="45dp"
        android:clickable="true"
        android:fontFamily="@font/fredoka"
        android:text="Cancel"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tohomeexit"
        app:layout_constraintEnd_toEndOf="@+id/tohomeexit" />

</androidx.constraintlayout.widget.ConstraintLayout>