<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tohomeexit"
        android:layout_width="285dp"
        android:layout_height="211dp"
        android:layout_marginStart="163dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="356dp"
        android:background="@drawable/bt_box_white_fill"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:id="@+id/exitbutton"
        android:layout_width="36dp"
        android:layout_height="41dp"
        android:background="@color/white"
        android:clickable="true"
        android:contentDescription="exitbutton"
        android:focusable="auto"
        android:src="@drawable/close_icon"
        app:layout_constraintBottom_toTopOf="@+id/areyousure"
        app:layout_constraintEnd_toEndOf="@+id/areyousure"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/tohomeexit"
        app:layout_constraintTop_toTopOf="@+id/tohomeexit"
        tools:ignore="SpeakableTextPresentCheck"
        tools:visibility="visible" />

    <Button
        android:id="@+id/exitohomemenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:clickable="true"
        android:fontFamily="@font/fredoka"
        android:text="Exit"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/areyousure"
        android:layout_width="240dp"
        android:layout_height="71dp"
        android:fontFamily="@font/fredoka"
        android:text="Are you sure ?"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/exitohomemenu"
        app:layout_constraintEnd_toEndOf="@+id/tohomeexit"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@+id/tohomeexit"
        app:layout_constraintTop_toTopOf="@+id/tohomeexit"
        app:layout_constraintVertical_bias="0.971" />

</androidx.constraintlayout.widget.ConstraintLayout>